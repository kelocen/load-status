<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.LoadStatus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
    <item name="colorOnPrimary">@color/black</item>
    <item name="colorAccent">@color/colorAccent</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
    <item name="android:textSize">@dimen/default_text_size</item>
  </style>
  <!-- Action Bar -->
  <style name="Theme.LoadStatus.NoActionBar" parent="Theme.LoadStatus">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <!-- App Bar Overlay-->
  <style name="Theme.LoadStatus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
  <!-- App Bar Overlay-->
  <style name="Theme.LoadStatus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>