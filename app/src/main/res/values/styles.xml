<resources>
  <!-- Top Level Style -->
  <style name="ApplicationStyle" parent="Theme.LoadStatus" />
  <!-- - - - - - = = = = = = = = = = = = Main Activity Layout = = = = = = = = = = = = - - - - - -->
  <!-- Coordinator Layout -->
  <style name="ActivityMain.CoordinatorLayout" parent="ApplicationStyle">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <!-- App Bar -->
  <style name="ActivityMain.AppBar" parent="ApplicationStyle">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <!-- Toolbar -->
  <style name="ActivityMain.Toolbar" parent="ApplicationStyle">
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>
  <!-- - - - - - = = = = = = = = = = = = Detail Activity Layout = = = = = = = = = = = = - - - - - -->
  <!-- Coordinator Layout -->
  <style name="ActivityDetail.CoordinatorLayout" parent="ApplicationStyle">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <!-- App Bar -->
  <style name="ActivityDetail.AppBar" parent="ApplicationStyle">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <!-- Toolbar -->
  <style name="ActivityDetail.Toolbar" parent="ApplicationStyle">
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>
  <!-- File Label TextViews -->
  <style name="ActivityDetail.TextView" parent="ApplicationStyle">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/detail_textview_margin_top</item>
  </style>
  <!-- Download Label Name TextView -->
  <style name="ActivityDetail.TextView.DownloadNameLabel" parent="ActivityDetail.TextView">
    <item name="android:text">@string/detail_text_download_name_label</item>
    <item name="android:textStyle">bold</item>
  </style>
  <!-- Download Status Label TextView -->
  <style name="ActivityDetail.TextView.DownloadStatusLabel" parent="ActivityDetail.TextView">
    <item name="android:text">@string/detail_text_download_status_label</item>
    <item name="android:textStyle">bold</item>
  </style>
  <!-- Download Size Label TextView -->
  <style name="ActivityDetail.TextView.DownloadSizeLabel" parent="ActivityDetail.TextView">
    <item name="android:text">@string/detail_text_download_size_label</item>
    <item name="android:textStyle">bold</item>
  </style>
  <!-- Download Date Label TextView -->
  <style name="ActivityDetail.TextView.DownloadDateLabel" parent="ActivityDetail.TextView">
    <item name="android:text">@string/detail_text_download_date_label</item>
    <item name="android:textStyle">bold</item>
  </style>
  <!-- Download Date Label TextView -->
  <style name="ActivityDetail.TextView.DownloadUrlLabel" parent="ActivityDetail.TextView">
    <item name="android:text">@string/detail_text_download_url_label</item>
    <item name="android:textStyle">bold</item>
  </style>
  <!-- Okay Button -->
  <style name="ActivityDetail.ButtonOkay" parent="ApplicationStyle">
    <item name="android:layout_height">@dimen/detail_button_ok_height</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_margin">@dimen/detail_button_ok_margin</item>
    <item name="android:layout_gravity">bottom|center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:text">@string/detail_label_button_ok</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:backgroundTint">@color/colorAccent</item>
  </style>
  <!-- - - - - - = = = = = = = = = = = = Main Content Layout = = = = = = = = = = = = - - - - - -->
  <!-- Constraint Layout -->
  <style name="ContentMain.ConstraintLayout" parent="ApplicationStyle">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:paddingStart">@dimen/default_padding</item>
    <item name="android:paddingEnd">@dimen/default_padding</item>
    <item name="android:paddingBottom">@dimen/default_padding</item>
  </style>
  <!-- Loading Button -->
  <style name="ContentMain.LoadingButton" parent="ApplicationStyle">
    <item name="android:layout_height">@dimen/main_button_loading_height</item>
    <item name="android:layout_width">@dimen/main_button_loading_width</item>
    <item name="android:layout_margin">@dimen/main_button_loading_layout_margin</item>
  </style>
  <!-- Radio List -->
  <style name="ContentMain.RadioList" parent="Theme.LoadStatus">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_vertical</item>
  </style>
  <!-- Radio Buttons -->
  <style name="ContentMain.RadioButtons" parent="Theme.LoadStatus">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">@dimen/main_radio_button_margin_bottom</item>
  </style>
  <!-- - - - - - = = = = = = = = = = = = Detail Content Layout = = = = = = = = = = = = - - - - - -->
  <!-- Constraint Layout -->
  <style name="ContentDetail.ConstraintLayout" parent="ApplicationStyle">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:paddingStart">@dimen/default_padding</item>
    <item name="android:paddingEnd">@dimen/default_padding</item>
    <item name="android:paddingBottom">@dimen/default_padding</item>
  </style>
</resources>
